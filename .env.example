# Database Configuration
DATABASE_URL=postgresql://user:password@host/database?sslmode=require

# Better-auth Configuration
BETTER_AUTH_SECRET=your-secret-key-here
BETTER_AUTH_URL=http://localhost:3001
# Production: Use subdomain of appacheur.com (e.g., https://api.appacheur.com)
BETTER_AUTH_CLIENT_URL=http://localhost:3000
# Production: Use subdomain of appacheur.com (e.g., https://app.appacheur.com)

# Redis Configuration (Upstash)
UPSTASH_REDIS_REST_URL=https://your-redis-url.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-redis-token

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key

# Server Configuration
PORT=3001
NODE_ENV=development

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000
# Production: Add additional trusted origins (comma-separated)
# Note: BETTER_AUTH_CLIENT_URL is automatically trusted
